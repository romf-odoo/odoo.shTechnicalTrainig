<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mission_view_form" model="ir.ui.view">
            <field name="name">mission.form</field>
            <field name="model">mission</field>
            <field name="arch" type="xml">
                <form string="Mission Form">
                    <sheet>
                        <h1><field name="name" /></h1>
                        <group>
                            <group>
                                <field name="spaceship_id" />
                            </group>
                            <group>
                                <field name="launchdate" />
                                <field name="returndate" />
                            </group>
                            <group>
                                
                                <field name="description"/>
                                <field name="fuel_amount" />
                                <field name="engines" />
                            </group>
                            

                        </group>
                        <notebook>
                            <page  string="Crew">
                                <field name="contacts_id"/>
                            </page>
                            <page  string="Projects">
                                <field name="project_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
            <field name="name">mission.form</field>
        </record>


        <record id="mission_view_list" model="ir.ui.view">
            <field name="name">mission.list</field>
            <field name="model">mission</field>
            <field name="arch" type="xml">
                <tree string="Mission List">
                    <field name="name"/>
                    <field name="contacts_id"/>
                </tree>
            </field>
        </record>


         <record id="spaceship_view_graph" model="ir.ui.view">
        <field name="name">mission.view.graph</field>
        <field name="model">mission</field>
        <field name="arch" type="xml">
          <graph string="metrics" type="bar">
              <field name="engines" />
              <field name="fuel_amount" />
          </graph>
        </field>
      </record> 
    </data>
    
</odoo>
