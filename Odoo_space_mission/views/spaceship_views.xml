<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record model='ir.ui.view' id='spaceship_view_form'>
        <field name='name'>odoo.spaceship.form</field>
        <field name='model'>spaceship2</field>
        <field name='arch' type='xml'>
          <form string='Add Spaceship'>
            <sheet>
              <h1><field name='name' /></h1>
              <group> 
                <group>
                  <field name="shiptype"></field>
                  <field name='passengers'></field>
                </group>
                <group>
                  <field name='active' />
                </group>
              </group>
              <notebook>
                <page string='Overview'>
                  <group>
                    <field name='height' force_save="1" />
                    <field name='width'  force_save="1"/>
                  </group>
                  <!-- <group>
                    
                  </group> -->
                  <group>
                    <field name='fuel_type' />
                  </group>
                </page>
              </notebook>
            </sheet>
          </form>
        </field>
      </record>
      <record model='ir.ui.view' id='spaceship_view_list'>
        <field name='name'>spaceship2.list</field>
        <field name='model'>spaceship2</field>
        <field name='arch' type='xml'>
          <tree string='Spaceships'>
            <field name='name' />
            <field name='passengers' />
          </tree>
        </field>
      </record>
    </data>
  </odoo>