<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="mission_wizard_form_view" model="ir.ui.view">
            <field name="name">mission.wizard.form</field>
            <field name="model">project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create new projec for mission">
                    <group>
                        <field name="mission_id"/>
                        
                    </group>
                    <footer>
                        <button name="create_project_mission" type="object" string="Create" class="oe_highlight"></button>
                        or
                        <button special="cancel" string="Cancel"></button>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="lauch_project_wizard"
                    name="Create new Project" 
                    binding_model="mission" 
                    res_model="project.wizard"
                    view_mode="form"
                    target="new"/>
    </data>
    

</odoo>
