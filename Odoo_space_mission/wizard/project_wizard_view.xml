<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="mission_wizard_form_view" model="ir.ui.view">
            <field name="name">project.wizard.form</field>
            <field name="model">project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create new project for mission">
                    <group>
                        <field name="name"/>
                        <!-- <field name="description"/> -->
                        <field name="mission_id" invisible="0"/>
                    </group>
                    <footer>
                        <button name="create_project" type="object" string="Create" class="oe_highlight"></button>
                        or
                        <button special="cancel" string="Cancel"></button>
                    </footer>
                </form>
            </field>
          </record>

         <record id="launch_the_wizard" model="ir.actions.act_window">
            <field name="name">Create project</field>
            <field name="res_model">project.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="Odoo_space_mission.model_mission"/>
            <field name="view_id" ref="mission_wizard_form_view" />
        </record>

        
    </data>
    

</odoo>
